# =============================================================================
# Scraper Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# Usage: cp .env.example .env

# -----------------------------------------------------------------------------
# Scraping Configuration (Required)
# -----------------------------------------------------------------------------

# URL to scrape running events from
SCRAPE_URL=https://pm1.blogspot.com/p/running-event-2026.html

# -----------------------------------------------------------------------------
# API Configuration (Required for syncing to backend)
# -----------------------------------------------------------------------------

# URL of the Go API internal sync endpoint
# For local development: http://localhost:8080/api/v1/internal/sync
# For Docker: http://api:8080/api/v1/internal/sync
API_URL=http://localhost:8080/api/v1/internal/sync

# Internal API key for authentication (must match INTERNAL_API_KEY in API's .env)
API_KEY=your_internal_api_key_here
